#!jinja2
########################
# Items that may need changed
{% set MODEL = 'GEFS' %}
{% set EXPS = 'EP5r1' %}
{% set AICE_VAR = "aice_d" %}
{% set ENS_MEMBERS = 10 %}
{% set PARSE_DATA = True %}
{% set MAIL_ADDRESS = "neil.barton@noaa.gov" %}

####################################
# define suite
#   hopefully user does not have to edit anything below here
{% set ICP = '20171004T00' %}
{% set FCP = '20241231T12' %}

[meta]
    title = "grab and analyize CICE output"

[cylc]
    UTC mode = True
    [[environment]]
        MAIL_ADDRESS = {{ MAIL_ADDRESS }}
    [[parameters]]
        cice_var = {{ AICE_VAR }}
        experiment = {{ EXPS }}
        mem = 0..{{ ENS_MEMBERS }}
        poles = 'north', 'south'

[scheduling]
    initial cycle point = {{ ICP }}
    final cycle point = {{ FCP }}
    max active cycle points = 6
    [[queues]]
        [[[default]]]
            limit = 42
    [[dependencies]]

################################################
# download data if needed from HPSS
{% if PARSE_DATA %}
        [[[R1]]]
            graph = """
                GRAB_OBS
                """

{% if MODEL == 'GFS' %}
%include INC/GFS_experiments.rc
{% elif MODEL == 'GEFS' %}
%include INC/GEFS_experiments.rc
{% elif MODEL == 'GDAS' %}
%include INC/GDAS_experiments.rc
{% endif %}

{% endif %} # if PARSE_DATA

################################################
# parsing data diagnostics at the last cycle point
        [[[R1/P0Y]]]
            graph = """
{% if not PARSE_DATA %}
                 POST_PARSE 
{% endif %}
                 POST_PARSE => CALC_ICE_EXTENT 
                 POST_PARSE => INTERP_ICE

                 CALC_ICE_EXTENT:succeed-all => plot_ice_extent
                 
                 INTERP_ICE:succeed-all => CALC_IIEE
                 CALC_IIEE:succeed-all   => plot_iiee
                 INTERP_ICE:succeed-all => MAPS_ICE_CON
                """

################################################
# tasks
[runtime]
    [[root]] 
        init-script = """
umask 022
set -xu
export SCRIPT_DIR=${CYLC_SUITE_DEF_PATH}/SCRIPTS
"""
        pre-script = """
source ${CYLC_SUITE_DEF_PATH}/SCRIPTS/modules.sh
unset ESMFMKFILE
        """
        post-script = """
rm -r ${CYLC_TASK_WORK_DIR}
        """
        [[[environment]]]
            AICE_VAR            = {{ AICE_VAR }}
            DTG                 = $(cylc cycle-point --template=%Y%m%d%H)
            MODEL               = {{ MODEL }}
            EXPS                = {{ EXPS }}
            ENS_MEMBERS             = {{ ENS_MEMBERS }}
        [[[job]]]
            execution retry delays = 3*PT10M
            batch system = slurm
        #[[[events]]]
        #    failed handler  = cylc email-task
        #    submission failed handler = cylc email-task
        [[[directives]]]
            --account = marine-cpu
            --ntasks = 1
            --time = 00:30:00
            --mem = 0
            #--qos = debug

####################################
# grab experiments and obs
    [[HPSS]]
        [[[directives]]]
            --partition = service
    [[GRAB_EXPS]]
        inherit = HPSS
    [[grab<experiment>_from_hpss]]
        inherit = GRAB_EXPS
        script = """
        EXP=${CYLC_TASK_PARAM_experiment}
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/GRAB_exps_from_hpss.sh ${DTG} ${EXP} ${ENS_MEMBERS}
        """
        #[[[job]]]
        #    batch system = background
    [[GRAB_OBS]]
        inherit = HPSS 
    [[grab_sea_ice_exents]]
        inherit = GRAB_OBS
        script = """
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/GRAB_ice_extent_from_hpss.sh 
        """

################################################
# parse data
    [[PARSE_OUTPUT_CICE]]
    [[parse_output<experiment><mem><cice_var>]]
        inherit = PARSE_OUTPUT_CICE
        script = """
        VAR=${CYLC_TASK_PARAM_cice_var}
        EXP=${CYLC_TASK_PARAM_experiment}
        MEM=${CYLC_TASK_PARAM_mem}
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/CICE_parse_output.sh ${DTG} ${VAR} ${EXP} ${MEM}
        """
        #[[[job]]]
        #    batch system = background
    [[ENSEMBLE_COMBINE]]
    [[ensemble_combine<experiment><cice_var>]]
        inherit = ENSEMBLE_COMBINE
        script = """
        VAR=${CYLC_TASK_PARAM_cice_var}
        EXP=${CYLC_TASK_PARAM_experiment}
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/ENS_combine_files.sh ${DTG} ${VAR} ${EXP} 
        """
        #[[[job]]]
        #    batch system = background
   [[POST_PARSE]]
        script = """ 
        echo "POST_PARSE is a dummy task"
        """
        [[[job]]]
            batch system = background

################################################
# diagnostics
   [[CALC_ICE_EXTENT]]
   [[calc_ice_extent<experiment>]]
        inherit = CALC_ICE_EXTENT
        script = """
        EXP=${CYLC_TASK_PARAM_experiment}
        source ${CYLC_SUITE_DEF_PATH}/SCRIPTS/directories.sh ${EXP}
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/CALC_ice_extent.py -d ${TOPDIR_OUTPUT}/${EXP} -v ${AICE_VAR}
        """
        [[[directives]]]
            --time = 04:00:00
            #--qos = debug
   [[plot_ice_extent]]
        script = """
        source ${CYLC_SUITE_DEF_PATH}/SCRIPTS/directories.sh HR1
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/PLOT_ice_extent.py -d ${TOPDIR_OUTPUT} -e ${EXPS} -v ${AICE_VAR} -fd ${TOPDIR_FIGURES}
        """
   [[INTERP_ICE]]
   [[interp_ice<experiment>]]
        inherit = INTERP_ICE
        script = """
        EXP=${CYLC_TASK_PARAM_experiment}
        source ${CYLC_SUITE_DEF_PATH}/SCRIPTS/directories.sh ${EXP}
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/INTERP_iiee.py -d ${TOPDIR_OUTPUT}/${EXP} -v ${AICE_VAR}
        """
        [[[directives]]]
            --time = 08:00:00
   [[CALC_IIEE]]
   [[calc_iiee<experiment>]]
        inherit = CALC_IIEE
        script = """
        EXP=${CYLC_TASK_PARAM_experiment}
        source ${CYLC_SUITE_DEF_PATH}/SCRIPTS/directories.sh ${EXP}
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/CALC_iiee.py -d ${TOPDIR_OUTPUT}/${EXP} -v ${AICE_VAR}
        """
        [[[directives]]]
            --time = 08:00:00
   [[plot_iiee]]
        script = """
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/PLOT_iiee.py -d ${TOP_DIR_OUTPUT} -v ${AICE_VAR} -e ${EXPS}
        """
   [[MAPS_ICE_CON]]
   [[maps_ice_concentration<poles><experiment>]]
        inherit = MAPS_ICE_CON
        script = """
        EXP=${CYLC_TASK_PARAM_experiment}
        POLE=${CYLC_TASK_PARAM_poles}
        source ${CYLC_SUITE_DEF_PATH}/SCRIPTS/directories.sh ${EXP}
        ${CYLC_SUITE_DEF_PATH}/SCRIPTS/CICE_maps.py -d ${TOPDIR_OUTPUT}/${EXP} -e ${EXP} -v ${AICE_VAR} -p ${POLE} -fd ${TOPDIR_FIGURES}
        """
        [[[directives]]]
            --time = 08:00:00
            --qos = batch
            --mem = 0
   
